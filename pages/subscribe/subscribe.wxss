/* pages/subscribe/subscribe.wxss */
page{
  width: 100%;
  background: #f5f5f5;
}
.subscribe_heard{
  padding: 10rpx 0rpx 40rpx;
  background: white;
  border-top:1rpx solid #eeeeee;
}
.subscribe_heard_box{
  display: inline-block;
  margin:30rpx 0rpx 0 52rpx;
}
.subscribe_heard_box>.act{
  border: 6rpx solid #F8473D;
  box-shadow:none; 
}
.subscribe_heard_box>.opp>.orr{
  box-shadow:none; 
}
.subscribe_heard_box>.act_es{
  color: #F8473D;
}
.opp{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.subscribe_heard_box .opp>image{
  width: 110rpx;
  height: 110rpx;
  text-align: center;
  box-shadow:1px 2px 3px 1px rgba(0, 0, 0, 0.1);
  border-radius: 50%;
}
.subscribe_heard_box>view{
  font-size: 28rpx;
  text-align: center;
}
.subscribe_heard_box>view:nth-child(3){
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: center;
}
.standard{
  /* padding: 0 60rpx 0rpx; */
  background: white;
}
.standard>view:nth-child(1){
  padding: 30rpx 60rpx 10rpx;
  border-top: 1rpx solid #eeeeee;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  justify-content: space-between;
}
.standard>view:nth-child(2){
  font-size: 30rpx;
  padding: 0 0rpx 0rpx 60rpx;
}
.standard_but{
  margin-top: 20rpx;
}
.standard_but>view{
 display: inline-block;
 margin:0 20rpx 20rpx 0;
 width: 192rpx;
 height: 55rpx;
 text-align: center;
 border: 1rpx solid #333333;
 line-height: 55rpx;
 border-radius: 10rpx;
 color: #333333
}
.standard_but .on{
  color: white;
  border: 0rpx;
  background: #F8473D;
}

.step{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  background: white;
}
.step>view{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #7e7c7c;
  overflow: hidden;
}
.step>view>.wxParse-p>image{
  width:100% !important;
}
.button{
  position: fixed;
  bottom: 80rpx;
  left: 24rpx;
}
.button>button{
  width: 700rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F8473D;
  color: white;
  border-radius: 60rpx;
}
.baidi{
  width: 100%;
  height: 200rpx;
  background: white;
}
.act{
  color: #F8473D;
}
