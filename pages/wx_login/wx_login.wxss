/* pages/wx_login/wx_login.wxss */
page, .login{
  width: 100%;
  height: 100%;
}
.login{
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_box>image{
  width: 520rpx;
  height: 430rpx;
}
.message{
  margin-top: 50rpx;
  font-size: 34rpx;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
}
.heart{
  margin-top: 30rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.accredit>button{
  width: 500rpx;
  height: 90rpx;
  background-color: #f8473d;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
  border-radius: 50rpx;
}
.btnhover{
  background-color: #f8473d;
}