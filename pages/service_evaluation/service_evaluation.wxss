/* pages/service_evaluation/service_evaluation.wxss */
page{
  background: #f5f5f5;
}
.service_evaluation{
  background: white;
  margin-top: 22rpx;
}
.evaluate{
  padding:90rpx 22rpx 0;
  display: flex;
  justify-content: center;
}
.evaluate_list{
  padding: 60rpx 22rpx 0;
}
.evaluate_list>view{
  display: inline-block;
  padding: 16rpx 30rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin:0 32rpx 30rpx;
}
.evaluate_conent{
  padding:0 40rpx 20rpx;
  background:white;
}
.evaluate_conent>view:nth-child(1){
  height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.evaluate_conent>textarea{
  width: 100%;
  height: 280rpx;
  padding: 30rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
}
.present{
  padding: 100rpx 40rpx 100rpx;
}
.present>view{
  width: 100%;
  background: #F8473D;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 60rpx;
}
.zengjia{
  padding: 22rpx 0 0;
}
.zengjia image{
  width: 160rpx;
  height: 160rpx;
}