/* pages/Orderdetail/Orderdetail.wxss */
page{
  background: #f5f5f5;
}
.Orderdetail{
  width: 100%;
}
.heart_box{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.all{
  margin-top: 280rpx;
}
.picker>input{
  text-align: center;
  margin-top: 5rpx;
  font-size: 22rpx;
}
.Time{
  display: flex;
  justify-content: space-between;
  height: 160rpx;
  padding: 0 110rpx;
  background: white;
  border-top: 1rpx solid #eeeeee;
}
.Time>view:nth-child(1), .Time>view:nth-child(2){
 width: 200rpx;
 height: 60rpx;
 padding: 10rpx 30rpx;
 box-sizing: border-box;
 border: 1rpx solid #cecbcb;
 border-radius: 30rpx;
 display: flex;
 justify-content: center;
 align-items: center;
}

.forms{
  margin-top: 22rpx;
  background: white;
  width: 100%;
}
.forms_top{
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.forms_conent{
  padding: 20rpx 30rpx 20rpx;
}
.forms_conent_top{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.forms_conent_top>image{
  width: 200rpx;
  height: 200rpx;
}
.forms_conent_top_right{
  width: 510rpx;
  margin-left: 16rpx;
}
.forms_conent_top_right>view:nth-child(1){
  font-size: 30rpx;
  margin-top: 18rpx;
}
.forms_conent_top_right>view:nth-child(2){
  font-size: 28rpx;
  color: #999999;
  margin-top: 40rpx;
}
.forms_conent_top_right>view:nth-child(3){
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.forms_conent_foot{
  margin-top: 30rpx;
  width: 100%;
}
.foot_box{
  display: flex;
}
.foot_box_top{
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #E6E6E6;
  display: flex;
}
.foot_box_top>view{
  height: 70rpx;
  display: flex;
  justify-content:center;
  align-items: center;
}
.foot_box_top>view:nth-child(1){
  width: 160rpx;
  border-right: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
  background: #F0F0F0;
}
.foot_box_top>view:nth-child(2){
  width: 200rpx;
}
.foot_box_top>view:nth-child(3){
  width: 200rpx;
  border-bottom: 1rpx solid #E6E6E6;
  background: #F0F0F0;
}
.foot_box_top>view:nth-child(4){
  width: 210rpx;
  font-size: 26rpx;
}
.foot_box .on{
  border-top: 0rpx;
}
.forms_foot{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
  font-size: 28rpx;
  border-top: 1rpx solid #eeeeee;
}
.forms_foot>view{
  display: flex;
  color: #333333;
  justify-content: space-between;
  align-items: center;
}
.forms_foot>view:nth-child(1)>view:nth-child(2), .forms_foot>view:nth-child(2)>view:nth-child(2){
  color: #F8473D;
}
.botton_box{
  width: 100%;
  height: 110rpx;
  background: white;
  padding: 20rpx 0rpx 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  margin-top: 22rpx;
  justify-content: space-between;
  align-items: center;
}
.botton_right{
  display: flex;
  align-items: center; 
}
.botton_right>view{
  width: 140rpx;
  border-left: 1rpx solid #eeeeee;
  text-align: center;
  font-size: 26rpx;
}
.botton_right>view>view:nth-child(1){
  color: #999999;
  margin-bottom: 10rpx;
}
.botton_right>view:nth-child(2)>view:nth-child(2), .botton_right>view:nth-child(3)>view:nth-child(2){
  color: #F8473D;
}

/*数据为空时 */
.boxs{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 460rpx;
}
.login_box>image{
  width: 430rpx;
  height: 320rpx;
}
.message{
  margin-top: 30rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #aaa7a7;
}
.add_site{
  width: 300rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #F8473D;
  border-radius: 50rpx;
  border: 1rpx solid #F8473D;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0 0 60rpx;
}