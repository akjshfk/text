/* pages/distributor/distributor.wxss */
page{
  background: #f5f5f5;
}
.distributor{
  padding: 22rpx 0 0;
  height: 100vh;
}
.distributor_box{
  margin-top: 100rpx;
  padding:22rpx 22rpx;
  
}
.distributor_box>view{
  background: white;
  padding:22rpx;
  border-radius: 20rpx;
}
.my_heart{
  background: white;
  display: flex;
  justify-content: center;
}
.my_heart>view>image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 90rpx;
  border-radius: 50%;
}
.my_heart>view>view:nth-child(2), .my_heart>view>view:nth-child(3){
  width: 300rpx;
  /* background: red; */
  text-align: center;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.my_heart>view>view:nth-child(3){
  color: #bdb9b9;
}
.distributor_money{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  margin-top: 30rpx;
}
.distributor_money>view{
  padding: 0 22rpx;
}
.distributor_money>view>view>text:nth-child(2){
  font-size: 34rpx;
  font-weight: 600;
}
/* .money_box{
  display: flex;
  align-items: center;
  
} */
.money_box>text{
  font-size: 30rpx;
  color: #a39f9f;
  margin-top: 20rpx;
  text-align: center;
}
.money_box>text:nth-child(2){
  display: inline-block;
  font-size: 21rpx;
  padding: 5rpx 16rpx;
  background: #bdb9b9;
  border-radius: 10rpx;
  color: black;
  margin-left: 16rpx;
}
.distributor_type{
  background: white;
  padding: 0rpx 0rpx 30rpx 0;
  box-sizing: border-box;
}
.onu{
  border-right: 1rpx solid #eeeeee;
}
.distributor_type_box{
  text-align: center;
  display: inline-block;
  width: 245rpx;
  margin-top: 40rpx;
}
.distributor_type_box>image{
  width: 60rpx;
  height: 60rpx;
}
.distributor_type_box>view{
  margin-top: 20rpx;
  font-size: 28rpx
}