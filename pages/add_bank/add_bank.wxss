/* pages/add_bank/add_bank.wxss */
page{
  background: #f5f5f5;
}
.add_bank>view:nth-child(1){
  padding: 30rpx;
  font-size: 28rpx;
  color: #999999;
}
.add_bank_box{
  padding: 30rpx;
  background: white;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eeeeee;
  align-items: center;
  font-size: 30rpx;
}
.add_bank_box>input{
  width: 520rpx;
}
.add_bank>view:nth-child(2){
border-bottom: 1rpx solid #eeeeee;
}
.butt{
  display: flex;
  justify-content: center;
}
.butt>button{
  width: 700rpx;
  height: 100rpx;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F8473D;
  color: white;
  margin-top: 100rpx;
}
.add_bank .on>input{
  width: 434rpx
}
.on>image{
  width: 26rpx;
  height: 20rpx;
}
van-picker{
  width: 100%;
  position: fixed;
  bottom:0rpx;
}
.van-picker__toolbar{
  color: white;
  font-size: 28rpx;
  background-color: red;
}
.van-picker .van-picker__cancel{
  color: white
}
.van-picker .van-picker__confirm{
  color: white
}