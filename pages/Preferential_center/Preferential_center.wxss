.boxs{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 240rpx;
}
.login_box>image{
  width: 430rpx;
  height: 320rpx;
}
.message{
  margin-top: 30rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #aaa7a7;
}
.add_site{
  width: 300rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #F8473D;
  border-radius: 50rpx;
  border: 1rpx solid #F8473D;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0 0 60rpx;
}

.discount{
  width: 100%;
  height: 90rpx;
  background: #F8473D;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  position: fixed;
  bottom: 0rpx;
  color: white;
  left: 0;
}