/* pages/Preferential_center/Preferential_center.wxss */
page{
  background:#f5f5f5;
}
.nav{
  height: 94rpx;
  background: white;
  padding:0 20rpx;
  display: flex;
  font-size: 32rpx;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #eeeeee;
  border-bottom: 1rpx solid #eeeeee;
}
.nav .on{
  border-bottom: 6rpx solid red;
}
.nav>view{
  padding: 26rpx 40rpx;
  border-bottom: 6rpx solid rgba(0, 0, 0, 0);
}
.discount>.coupon, .discount>.centre{
  display: block;
  padding: 0rpx 22rpx
}
.discount>.on, .discount>.re{
  display: none;
}

.coupon_box{
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0rpx 0 30rpx;
  box-sizing: border-box;
}
.coupon_top{
  color: #F8473D;
  font-size: 36rpx;
}
.coupon_middle>view:nth-child(1){
  font-size: 30rpx;
}
.coupon_middle>view:nth-child(2){
  font-size: 26rpx;
  margin-top: 26rpx;
  color: #B2B2B2;
}
.coupon_botton{
  font-size: 28rpx;
  color: white;
  margin-right: 20rpx;
}
.coupon_botton>view:nth-child(2){
  text-align: center;
  margin: 5rpx;
}
.coupon_botton>view:nth-child(1){
  text-align: center;
}
.coupon_botton>view:nth-child(3){
  padding: 5rpx 30rpx;
  background: white;
  border-radius: 30rpx;
  color: #F8473D;
}
.coupon_box .coupon_botton .on,.coupon_box .on>view:nth-child(1), .coupon_box .on{
  color: #B3B3B3;
}



