/* pages/my_evaluate/my_evaluate.wxss */
page{
  background: #F9655D;
}
.Lottery_heart{
  width: 100%;
  height: 450rpx;
}
.award{
  padding: 0 22rpx;
  position: relative;
}
.award>view{
  width: 100%;
  padding: 80rpx 100rpx;
  box-sizing: border-box;
  background: #FEF2F4;
  border-radius: 20rpx;
  text-align: center;
}
.award_top{
  width: 300rpx;
  height: 70rpx;
  background: #F9847F;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: -35rpx;
  left: 50%;
  margin-left: -22%;
}
.award_top>image{
 width: 66rpx;
 height: 52rpx;
}
.award_top>view{
 color: white;
 font-size: 34rpx;
 font-weight: 900;
 margin-left: 10rpx;
}
.award_foot>text:nth-child(1){
  font-weight: 900;
}
.on{
  margin-top: 80rpx;
  position: relative;
}
.award_box{
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.on .award_box .award_top{
  position: absolute;
  top: -35rpx;
}
.award_conent{
  display: flex;
  justify-content: flex-start;
}
.award_box>view:nth-child(2)>view{
  width: 110rpx;
  height: 50rpx;
  padding: 0 20rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F9655D;
  color: white;
  margin-right: 20rpx;
}
.award_conent>text{
  width: 500rpx;
}
.participant{
 margin: 0 auto;
 width: 500rpx;
 height: 90rpx;
 background: white;
 display: flex;
 justify-content: center;
 align-items: center;
 color: #F9655D;
 border-radius: 60rpx;
 margin-top: 80rpx;
 margin-bottom: 100rpx;
 
}
.hint{
  border: 1rpx solid #eeeeee;
  padding: 50rpx 60rpx;
  box-sizing: border-box;
  background: white;

}
.hint>view{
  text-align: center;
}
.hint{
  position: relative;
}
.hint>image{
  width: 160rpx;
  height: 160rpx;
  margin: 30rpx 0 30rpx 230rpx;
}
.hint>view:nth-child(1)>image{
  width: 40rpx;
  height: 40rpx;
  background: white;
  position: absolute;
  top: -70rpx;
  right: 30rpx;
}
.hint>view:nth-child(2), .hint>view:nth-child(3){
  color: #666666
}
.hint>view:nth-child(5){
  width: 500rpx;
  height: 90rpx;
  background: #F8473D;
  color: white;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 60rpx;
  margin-left: 55rpx;
}