.footer-box{
  width: 100%;
  height: 100rpx;
}
.footer{
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
  position: fixed;
  z-index: 100;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 1px solid #e1e1e1;
  background-color: #fff;
}
.footer-item .foot-img{
  width: 45rpx;
  height: 45rpx;
  margin: 12rpx auto 0;
}
.footer-item text{
    margin-top: 5rpx;
    font-size: 22rpx;
    color: #666;
}