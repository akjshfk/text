/* pages/order_details/order_details.wxss */
page{
  background: #f5f5f5;
}
.order_details{
  width: 100%;
}
.details_heart{
  height: 116rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  background: #F8473D;
  color: white;
  font-size: 32rpx;
  box-sizing: border-box;
}
.bott .act{
  color: #F8473D;
  border: 1rpx solid #F8473D;
  margin-right: 22rpx;
}
.details_type{
  padding: 22rpx;
  background: white;
  display: flex;
  justify-content: space-between;
  margin-top: 22rpx;
}
.details_type_left{
  display: flex;
  align-items: center;
}
.details_type_left>image{
  width: 200rpx;
  height: 200rpx;
}
.details_type_right{
  width: 500rpx;
  font-size: 30rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
}
.details_type_right>view{
  width: 500rpx;
}
.details_type_right_conent{
  margin: 20rpx 0;
  display: flex;
  font-style: 30rpx;
  color: #979797
}
.details_type_right_top{
  font-size: 34rpx;
}
.details_type_right_conent>view:nth-child(2){
  margin-left: 20rpx;
}
.details_type_right_botton{
  display: flex;
  font-style: 30rpx;
  justify-content: space-between;
}
.details_type_right_botton>view:nth-child(1){
  color: #FF5000;
}
.details{
  padding: 40rpx 22rpx 10rpx;
  font-size: 30rpx;
  background: white;
  margin-top: 22rpx;
}
.on{
  margin-bottom: 200rpx;
}
.details>view{
  margin-bottom: 30rpx;
  color: #444444;
}
.bott{
  width: 100%;
  padding: 26rpx;
  background: white;
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  box-sizing: border-box;
}
.bott>view{
  padding: 10rpx 26rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 40rpx;
  display: inline-block;
}
.bott>view:nth-child(1){
  margin-right: 20rpx;
}
/* 《弹窗 */
.windows_box{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
}
.windows{
  width: 600rpx;
  height: 270rpx;
  background-color: white;
  margin: 0 auto;
  position: fixed;
  top: 444rpx;
  left: 80rpx;
  border-radius: 20rpx;
}
.windows_top{
  width: 100%;
  height: 66%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
  font-size: 32rpx;
}
.windows_botton{
  display: flex;
  width: 100%;
  height: 34%;
}
.windows_botton>view:nth-child(1), .windows_botton>view:nth-child(2){
  width: 50%;
  height: 100%; 
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx; 
}
.windows_botton>view:nth-child(2){
  border-left:1rpx solid #eeeeee;
  color: red;
  font-size: 32rpx;
}
.ont{
  padding: 0 140rpx;
}
.indent_left>view:nth-child(1){
  text-align: center;
  margin-bottom: 20rpx;
}
.indent_left>view:nth-child(1)>text:nth-child(1){
  font-size: 40rpx;
  font-weight: 800; 
  margin-right: 10rpx;
}

/* 员工信息 */
.details .yuangong{
  font-size: 30rpx;
  font-weight: 600;
  text-align: center
}